{
	"$type": "com.atproto.lexicon.schema",
	"lexicon": 1,
	"id": "games.gamesgamesgamesgames.listGames",
	"defs": {
		"main": {
			"type": "query",
			"description": "Get a list of games on the network.",
			"parameters": {
				"type": "params",
				"properties": {
					"cursor": {
						"type": "string"
					},
					"did": {
						"type": "string",
						"format": "did"
					},
					"limit": {
						"type": "integer",
						"minimum": 1,
						"maximum": 100,
						"default": 20
					}
				}
			},
			"output": {
				"encoding": "application/json",
				"schema": {
					"type": "object",
					"required": ["games"],
					"properties": {
						"cursor": { "type": "string" },
						"games": {
							"type": "array",
							"items": {
								"type": "ref",
								"ref": "games.gamesgamesgamesgames.defs#gameSummaryView"
							}
						}
					}
				}
			}
		}
	}
}
